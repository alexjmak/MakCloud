extends layout

block header
    link(rel='stylesheet', type='text/css', href='/stylesheets/fileEditor.css')
    script.
        let filePath = "#{file.path}";
    script(type='text/javascript', src= "/javascripts/fileEditor.js")

block drawer
    aside.mdc-drawer.mdc-top-app-bar--fixed-adjust
        .mdc-drawer__header
            h3.mdc-drawer__title
        .mdc-drawer__content
            nav.mdc-list
                a.mdc-list-item.mdc-list-item--activated(href='/files')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') folder
                    span.mdc-list-item__text File Manager
                a.mdc-list-item#download
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') cloud_download
                    span.mdc-list-item__text Download
                a.mdc-list-item#share
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') share
                    span.mdc-list-item__text Share
                a.mdc-list-item#delete
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') delete
                    span.mdc-list-item__text Delete
                .mdc-list-divider
                a.mdc-list-item(href='.')#back
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') arrow_back
                    span.mdc-list-item__text Back
                a.mdc-list-item#logout
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') launch
                    span.mdc-list-item__text Logout

block content
    pre#fileContents(hidden).mdc-elevation--z10

    #authorization.box.mdc-card.mdc-elevation--z8(style="display: none")
        .demo-card__primary
            #title.demo-card__title.mdc-typography.mdc-typography--headline4 Authorization Required
        br
        .mdc-text-field
            input#password.mdc-text-field__input(type='password' tabindex=1)
            .mdc-line-ripple
            label.mdc-floating-label Password
        p#message
        button#submit.mdc-button.mdc-button--raised Submit




    