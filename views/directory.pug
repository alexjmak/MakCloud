extends layout

block header
    link(rel='stylesheet', type='text/css', href='/stylesheets/directory.css')
    script.
        function b64DecodeUnicode(str) {
            // Going backwards: from bytestream, to percent-encoding, to original string.
            return decodeURIComponent(atob(str).split('').map(function (c) {
                return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
            }).join(''));
        }
        let folderContents = JSON.parse(b64DecodeUnicode("#{directory.files}"));
        let decryptedFileNames;
        if ("#{directory.decryptedFileNames}" !== "") {
            decryptedFileNames = JSON.parse(b64DecodeUnicode("#{directory.decryptedFileNames}"));
        }

    script(type='text/javascript', src= "/javascripts/directory.js")


block drawer
    aside.mdc-drawer.mdc-top-app-bar--fixed-adjust
        .mdc-drawer__content
            .mdc-drawer__header
                h3.mdc-drawer__title
            nav.mdc-list
                a.mdc-list-item.mdc-list-item--activated(href='/files')#file-manager
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') folder
                    span.mdc-list-item__text File Manager
                a.mdc-list-item.mdc-list-item(href='/photos')#photos
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') perm_media
                    span.mdc-list-item__text Photos
                a.mdc-list-item#upload
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') cloud_upload
                    span.mdc-list-item__text Upload
                input#uploadButton(hidden type="file" multiple)
                a.mdc-list-item#download-current-dir
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') cloud_download
                    span.mdc-list-item__text Download
                a.mdc-list-item(href='/shared?me')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') person
                    span.mdc-list-item__text Shared with me
                a.mdc-list-item(href='/shared?others')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') people
                    span.mdc-list-item__text Shared with others
                a.mdc-list-item(href='/files/.recycle')
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') delete
                    span.mdc-list-item__text Trash
                .mdc-list-divider
                a.mdc-list-item(href='.')#back
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') arrow_back
                    span.mdc-list-item__text Back
                a.mdc-list-item#logout
                    i.material-icons.mdc-list-item__graphic(aria-hidden='true') launch
                    span.mdc-list-item__text Logout

